<h1>Spots:</h1>

<form action = "/spots/new" >
		<input type="submit" value = "New Spot"/>
</form>	

<% spots.forEach(function(spot){ %>
	
	<img src= "<%= spot.image %>">

	<h2> <%=spot.name %></h2>

	<form action = "/spots/<%=spot._id %>" >
		<input type="submit" value = "Show More"/>
	</form>


<% }); %>


