<% include ../partials/header %>

<div class = "container">

	<header class= "jumbotron">
		<div class = "container">
			<h1> Welcome to KiteSpots! </h1>
			<p>
				Discover the best spots from all over the world
			</p>
			<p>
				<a class = "btn btn-primary btn-large" href = "/spots/new"> Add New Spot </a>
			</p>
		</div>	
	</header>

	<div class = "row text-center" style ="display:flex; flex-wrap: wrap;">
		<% spots.forEach(function(spot){ %>
			<div class = "col-md-3 col-sm-6">
				<div class = "thumbnail">
					<img src= "<%= spot.image %>">
					<div class = "caption">
						<h2> <%=spot.name %></h2>
						<a href = "/spots/<%=spot._id %>" class = "btn btn-primary btn-md" role = "button"> More info </a>	
					</div>
				</div>
			</div>
		<% }); %>
	</div>
	
</div>

<% include ../partials/footer %>
