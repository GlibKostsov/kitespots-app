<% include ../partials/header %>


<div class  = "container">
	<div class = "row">
		<h1 style = "text-align: center"> Create a new spot </h1>
		<div style = "width: 30%; margin: 25px auto;">

			<form action = "/spots" method = "POST">
				<div class = "form-group" >
					<input class= "form-control" type = "text" name = "spot[name]" placeholder = "spot name" >
				</div>
				<div class = "form-group" >
					<input class= "form-control" type = "text" name = "spot[country]" 	placeholder = "country"		> 
				</div>
				<div class = "form-group" >
					<input class= "form-control" type = "text" name = "spot[image]" 		placeholder = "inmage url"	>
				</div>
				<div class = "form-group" >
					<input class= "form-control" type = "text" name = "spot[description]" placeholder = "description"	>
				</div>
				<div class = "form-group">
					<button class = "btn btn-lg btn-primary btn-block"> Submit </button>
				</div>
			</form>

			<a href = "/spots">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>